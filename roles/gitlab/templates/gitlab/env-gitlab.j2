UNICORN_WORKERS={{ gitlab_unicorn_workers }}
SIDEKIQ_CONCURRENCY={{ gitlab_sidekiq_concurrency }}

GITLAB_PROJECTS_WIKI={{ gitlab_gitlab_projects_wiki|to_json }}
GITLAB_PROJECTS_SNIPPETS={{ gitlab_gitlab_projects_snippets|to_json }}
GITLAB_PROJECTS_BUILDS={{ gitlab_gitlab_projects_builds|to_json }}
GITLAB_PROJECTS_ISSUES={{ gitlab_gitlab_projects_issues|to_json }}

GITLAB_SECRETS_OTP_KEY_BASE={{ gitlab_gitlab_secrets_otp_key_base }}
